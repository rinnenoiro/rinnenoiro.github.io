---
import BaseLayout from 'src/layouts/BaseLayout.astro';
import { css } from 'src/styled-system/css';
import { center } from 'src/styled-system/patterns';

interface Props {
  title: string;
  description: string;
  image?: string;
}
---

<BaseLayout {...Astro.props}>
  <header class={center({ p: '6' })}>
    <a
      aria-label="Home"
      class={css({
        overflow: 'hidden',
        w: '16',
        h: '16',
        rounded: 'full',
        shadow: 'md',
        filter: 'auto',
        transition: 'common',
        '&:hover': {
          shadow: 'xl',
          brightness: '1.1',
        },
      })}
      href="/"
    >
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 700 700">
        <defs>
          <linearGradient gradientTransform="rotate(58 .5 .5)" x1="50%" y1="0%" x2="50%" y2="100%" id="a">
            <stop stop-color="hsl(185, 75%, 43%)" offset="0%"></stop>
            <stop stop-color="hsl(190, 53%, 31%)" offset="100%"></stop>
          </linearGradient>
          <filter id="b" x="-20%" y="-20%" width="140%" height="140%" filterUnits="objectBoundingBox" primitiveUnits="userSpaceOnUse" color-interpolation-filters="sRGB">
            <feTurbulence type="fractalNoise" baseFrequency="0.004 0.004" numOctaves="2" seed="2" stitchTiles="stitch" x="0%" y="0%" width="100%" height="100%" result="turbulence"></feTurbulence>
            <feGaussianBlur stdDeviation="50 51" x="0%" y="0%" width="100%" height="100%" in="turbulence" result="blur"></feGaussianBlur>
            <feBlend mode="lighten" x="0%" y="0%" width="100%" height="100%" in="SourceGraphic" in2="blur" result="blend"></feBlend>
          </filter>
        </defs>
        <path fill="url(#a)" filter="url(#b)" d="M0 0h700v700H0z"></path>
      </svg>
    </a>
  </header>
  <main class={css({ pb: '12' })} id="main-content">
    <slot />
  </main>
</BaseLayout>
